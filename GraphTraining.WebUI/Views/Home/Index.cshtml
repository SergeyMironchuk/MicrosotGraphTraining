@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="padding: 10px;">
@using (Html.BeginForm("Login", "Home"))
{
    <div class="col-sm-12">
        <div class="form-group">
            <label for="clientId">Client ID:</label>
            <input id="clientId" name="clientId" type="text" class="form-control" style="font-size: small;" value="@ViewBag.ClientId" />
            <label for="clientSecret">Client Secret:</label>
            <input id="clientSecret" name="clientSecret" type="text" class="form-control" style="font-size: small;" value="@ViewBag.ClientSecret" />
            <button class="btn btn-default" style="margin-top: 5px;">Login</button>
        </div>
    </div>
}
</div>

<div class="row">
    @using (Html.BeginForm("Index", "Home"))
    {
        <div class="col-sm-12">
            <div class="form-group">
                <label for="command">Graph Command:</label>
                <input id="command" name="command" type="text" class="form-control" style="font-size: small;" value="@ViewBag.Command"/>
                <button class="btn btn-default" style="margin-top: 5px;">Run Command</button>
            </div>
        </div>
    }

    <div class="col-sm-12">
        <label for="commandResult">Command Result</label>
        <pre id="commandResult" name="commandResult">@ViewBag.CommandResult</pre>
    </div>

    <div class="col-sm-12">
        <div class="form-group">
            <label for="token">Auth Token</label>
            <input id="token" name="token" type="text" class="form-control" style="font-size: xx-small;" value="@ViewBag.Token" />
        </div>
    </div>
</div>
